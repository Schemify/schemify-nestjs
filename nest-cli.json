{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "./",
  "entryFile": "src/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/schemify-nestjs/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/schemify-nestjs",
  "projects": {
    "schemify-microservice-nestjs": {
      "type": "application",
      "root": "apps/schemify-microservice-nestjs",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/schemify-microservice-nestjs/tsconfig.app.json",
        "assets": ["libs/proto/src/**/*.proto"],
        "watchAssets": true
      }
    },
    "proto": {
      "type": "library",
      "root": "libs/proto",
      "entryFile": "index",
      "sourceRoot": "libs/proto/src",
      "compilerOptions": {
        "assets": ["**/*.proto"],
        "watchAssets": true
      }
    }
  }
}
